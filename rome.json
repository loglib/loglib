{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "warn"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noPrototypeBuiltins": "off"
            },
            "security": {
                "noDangerouslySetInnerHtml": "off"
            },
            "style": {
                "useBlockStatements": "off",
                "useSelfClosingElements": "off",
                "noParameterAssign": "off"
            },
            "performance": {
                "noDelete": "off"
            },
            "a11y": {
                "useButtonType": "off",
                "noSvgWithoutTitle": "off",
                "useKeyWithClickEvents": "off"
            }
        },
        "ignore": ["node_modules", ".next", "dist", "generated", ".contentlayer"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentSize": 4,
        "enabled": true,
        "lineWidth": 100,
        "ignore": ["node_modules", ".next", "dist", "generated", ".contentlayer"]
    },
    "organizeImports": {
        "enabled": true
    }
}
